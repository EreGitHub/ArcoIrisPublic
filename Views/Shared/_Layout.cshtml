                <script type="text/javascript">
                    function MostarInfSave(Data) {
                        Data.forEach(value => {
                            switch (value.Tipo) {
                                case 'Success':
                                    toastr.success(value.Nombre);
                                    break;
                                case 'warning':
                                    toastr.warning(value.Nombre);
                                    break;
                                case 'info':
                                    toastr.info(value.Nombre);
                                    break;
                                case 'error':
                                    toastr.error(value.Nombre);
                                    break;
                                default:
                            }

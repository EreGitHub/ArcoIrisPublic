                function CreateNotifications(title, body) {
                    //document.getElementById("AudioNotification").play();
                    console.log('Permision notifi: ' + Push.Permission.has());
                    Push.create(title, {
                        body: body,
                        icon: '../Content/img/campana.png',//'/Logo_small.png',
                        timeout: 10000,
                        onClick: function () {
                            window.focus();
                            this.close();
                        }
                    });
                }
